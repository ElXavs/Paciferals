Fuente1='Lato', sans-serif
Fuente2='Oswald', sans-serif

gris-oscuro=#2f2f2f
color-claro= #FFFFFF
gris-claro=#888888
amarillo=#FEDE01
color4=#2f2f2f
color5=#2f2f2f
azul=#3D52D5


*
  box-sizing: border-box

body
  margin: 0
  font-family: Fuente1
  background-color: gris-oscuro

.header
  height: 75px
  width: 1640px
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center
  background-color: color-claro
  h1 
    margin: 0
    margin-left:10px
    padding: 0
    font-size: 60px
    font-weight: 700
    letter-spacing: 2px
  &-right
    width: 200px
    display: flex
    align-items: center
    justify-content: space-around
.cuenta img
  height: 40px
.carrito img
  height: 35px

.footer
  width: 100%
  height 150px
  margin: 0 auto
  display: flex
  justify-content: space-around
  align-items: center
  font-size: 25px
  color: white
  background: gris-oscuro
  &--left
    ul
      margin: 0
      padding: 0
    li
      list-style none
    a
      text-decoration: none
      color: white
    a:hover
      text-decoration: underline
  &--center
    padding-top: 30px
  &--right
    width: 200px
    display: inline-block
    h3
      color: amarillo
    .social
      .social-link
        // width: 60px;
        // height: 60px;
        background-size: 60px 60px;
        margin: 0 20px;
      .social-link.twitter
        background-image: linear-gradient(rgba(255,255,255, 1), rgba(255,255,255, 1)), url("https://img.icons8.com/ios/100/000000/twitter-squared.png")
      .social-link.instagram
        background-image: linear-gradient(rgba(255,255,255, 1), rgba(255,255,255, 1)), url("https://img.icons8.com/metro/104/000000/instagram-new.png")
      .social-link.github
        background-image: linear-gradient(rgba(255,255,255, 1), rgba(255,255,255, 1)), url("https://img.icons8.com/material-rounded/96/000000/github.png")
  
.intro
  &__titulo
    height: 130px
    width: 1640px
    margin: 0 auto
    display: flex
    justify-content: center
    align-items: center
    background-color: gris-oscuro
    h1
      font-size: 40px
      font-weight: 500
      font-family: Fuente2
      letter-spacing: 35px
      text-transform: uppercase
      color: color-claro
  &__nav-categorias
    // padding-top: 20px
    margin: 0 auto
    display: grid
    grid-template-columns: repeat(2, 1fr)
    grid-template-rows: 1fr
    width: 1640px
    &--teclado
      grid-column: 1 / 2
      grid-row: 1 / 2
      width: 820px
      height 744.32px
      background-image: linear-gradient(rgba(0,0,0, 0), rgba(0,0,0, .9)), url("https://www.duckychannel.com.tw/upload/2020_05_072/202005071320152c0pd4mbd1.jpg")
      background-size: cover
      background-position: center center
      text-decoration: none
      color: amarillo
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      h1 
        margin: 0
        width: 400px
        text-align: center
        font-size:80px
        text-shadow: 5px 5px 20px #000;
      p 
        font-size: 20px
        font-weight: 600
        color: white
        text-shadow: 5px 5px 10px #000;
    &--mouse
      grid-column: 2 / 3
      grid-row: 1 / 2
      width: 820px
      height: 744.32px
      background: linear-gradient(rgba(0,0,0, 0), rgba(0,0,0, .9)), url("https://static.techspot.com/images2/news/bigimage/2020/01/2020-01-15-image-13.jpg")
      background-size: cover
      background-position: center center
      size: 40px
      text-decoration: none
      color: amarillo
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      h1 
        margin: 0
        width: 400px
        text-align: center
        font-size:80px
        text-shadow: 5px 5px 20px #000000;
      p 
        font-size: 20px
        color: white
        font-weight: 600
        text-shadow: 5px 5px 10px #000;

.marcas
  &__container
    display: flex
    justify-content: space-around
    align-items: center
    width: 1640px
    height 150px
    margin: 0 auto
    background: gris-claro
    img 
      height: 50px
    .zowie
      height: 140px
      margin-bottom: 15px