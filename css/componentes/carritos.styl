.carrito
  width: 1640px
  height: 100vh
  margin: 0 auto
  margin-bottom: 20px
  display: grid
  grid-template-columns: 1027px 1fr 300px 1fr
  grid-template-rows: 150px 1fr
  &__title
    grid-row: 1 / 2
    grid-column: 1 / 4
    font-family: Fuente2
    font-size: 30px
    color: amarillo 
    margin-bottom: 0
    margin-top:auto
  &__productos
    grid-row: 2 / 3
    grid-column: 1 / 2
    border-radius: 20px
    box-shadow: 0 0 5px 5px white
    background: gris-claro
    .producto-carrito
      display: grid
      grid-template-columns: 286px repeat(3, 1fr)
      grid-template-rows: 1fr
      height: 220px
      margin: 10px
      border-radius: 20px
      background: white
      font-size: 20px
      h3
        margin-top: 30px
        opacity: .7
      .producto-imagen
        grid-column: 1 / 2 
        margin: 10px
        img 
          height: 200px
          width: 266px
          border: 1px solid gris-oscuro
          border-radius: 20px
      .producto-contenido
        grid-column: 2 / 3
        justify-self: center
        h2 
          margin-bottom: 0   
        .titulo
          margin-top: 0   
          font-size: 25px
      .producto-cantidad
        grid-column: 3 / 4
        justify-self: center
      .producto-precio
        grid-column: 4 / 5
        justify-self: center
        p
          font-weight: 800

  &__total
    grid-row: 2 / 3
    grid-column: 3 / 4
    height: 240px
    border-radius: 20px
    box-shadow: 0 0 5px 5px white
    background: gris-claro
    &--caja
      display: flex
      flex-direction: column
      justify-content: space-around
      align-items: center
      text-align: center
      color: amarillo
      &-precio
        margin-top: 20px
        h2
          font-weight: 900
      &-compra
        button
          height: 50px
          width: 200px
          margin-top: 20px
          font-family: Fuente2
          font-weight: 900
          font-size: 25px
          border-radius: 20px
          border: none
          background: amarillo 
        button:hover
          cursor pointer