.modal
  position: fixed
  z-index: 2
  top: 18%
  left: 20%
  width: 1100px
  &__producto
    display: grid
    grid-template-columns: 675px 1fr
    grid-template-rows: 600px
    border-radius: 20px
    background-color: color-claro
    &-imagen
      grid-column: 1 / 2
      background-color: gris-claro
      justify-self: center
      align-self: center
      display: flex
      justify-content: center
      align-items: center
      height: 580px
      border-radius: 20px
      img 
        width: 660px
        object-fit: contain
        background-color: gris-claro
    &-contenido
      grid-column: 2 / 3
      &-titulo
        height:200px
        font-family: Fuente2
        font-size: 40px
        line-height: 5px
      &-cantidad
        font-size: 20px
      &-precio
        font-size: 20px
        p
          text-align: center
      &-button
        text-align: center
        button
          height: 50px
          width: 200px
          margin-top: 20px
          font-family: Fuente2
          font-weight: 900
          font-size: 25px
          border-radius: 20px
          border: none
          background: amarillo 
        button:hover
          cursor pointer 

