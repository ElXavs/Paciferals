Fuente1='Lato', sans-serif
Fuente2='Oswald', sans-serif

gris-oscuro=#2f2f2f
color-claro= #FFFFFF
gris-claro=#888888
amarillo=#FEDE01
color4=#2f2f2f
color5=#2f2f2f
azul=#3D52D5

*
  box-sizing: border-box

body
  margin: 0
  font-family: Fuente1
  background-color: gris-oscuro

.header
  height: 75px
  width: 1640px
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center
  background-color: color-claro
  h1 
    margin: 0
    margin-left:10px
    padding: 0
    font-size: 60px
    font-weight: 700
    letter-spacing: 2px
  &-right
    width: 200px
    display: flex
    align-items: center
    justify-content: space-around
.cuenta img
  height: 40px
.carrito img
  height: 35px

.footer
  width: 100%
  height 150px
  margin: 0 auto
  display: flex
  justify-content: space-around
  align-items: center
  font-size: 25px
  color: white
  background: gris-oscuro
  &--left
    ul
      margin: 0
      padding: 0
    li
      list-style none
    a
      text-decoration: none
      color: white
    a:hover
      text-decoration: underline
  &--center
    padding-top: 30px
  &--right
    display: flex
    align-content: center
    flex-direction: column
    width: 180px
    .follow
      display: flex
      justify-content: flex-end
      h3
        margin: 0
        padding: 0 
        color: amarillo
    .social
      .social-link
        display: inline-block
        img
          width: 60px;
          height: 60px;