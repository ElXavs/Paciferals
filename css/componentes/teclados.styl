.teclado
  width: 1920px
  height: auto
  margin-bottom: 100px
  display: grid
  grid-template-columns: repeat(4, 1fr)
  grid-template-rows: 130px 100px 500px 500px
  &__title
    grid-column: 1 / 5
    grid-row: 1 / 2
    display: flex
    justify-content: center
    width: 1920px
    height 130px
    margin: 0 auto
    background-color: gris-claro
    box-shadow: 0 0 15px 0 black
    h2
      font-size: 40px
      font-weight: 500
      font-family: Fuente2
      letter-spacing: 35px
      text-transform: uppercase
      color: color-claro
      text-shadow: 5px 5px 15px black
  &__brand--ducky
    grid-column: 1 / 3
    grid-row: 2 / 3
    display: flex
    justify-content: center
    height:100px
    width: 820px
    margin: 0 auto
    color: amarillo
    h2
      font-size: 30px
      font-weight: 500
      font-family: Fuente1
      letter-spacing: 35px
      text-transform: uppercase
      color: amarillo
      text-shadow: 5px 5px 15px black
  &__brand--hk
    grid-column: 3 / 5
    grid-row: 2 / 3
    display: flex
    justify-content: center
    height: 100px
    width: 820px
    margin: 0 auto
    color: amarillo
    h2
      font-size: 30px
      font-weight: 500
      font-family: Fuente1
      letter-spacing: 35px
      text-transform: uppercase
      color: amarillo
      text-shadow: 5px 5px 15px black
  .caja--productos
    align-self: center
    justify-self: center
    height: 410px
    width: 810px
    border-radius: 20px 
    // border: 5px solid amarillo
    // margin: 0 20px
    display: block
    position: relative
    overflow: hidden
    background: gris-oscuro
    text-decoration: none
    box-shadow: 0px 0px 10px 10px amarillo
    img 
      display: block
      width 100%
      height: 100%
      position: absolute
      object-fit: cover
      border: 5px solid gris-claro
      // opacity: .8
      border-radius: 20px
    &__contenido
      padding: 20px
      position: absolute
      margin: 0 auto
      text-align: center
      color: white
      h3
        font-size: 40px
        text-shadow: 0px 0px 10px black
  .caja-ducky1
    grid-column: 1 / 3
    grid-row: 3 / 4
    background: gris-fondo
  .caja-ducky2
    grid-column: 1 / 3
    grid-row: 4 / 5
  .caja-hk1
    grid-column: 3 / 5
    grid-row: 3 / 4
    h3
      color: black
      text-shadow: 0px 0px 10px white
  .caja-hk2
    grid-column: 3 / 5
    grid-row: 4 / 5
    h3
      color: black
      text-shadow: 0px 0px 10px white