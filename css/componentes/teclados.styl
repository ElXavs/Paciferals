#teclados
  height: 85px
.teclado
  width: 90vw
  height: auto
  margin: 0 auto
  margin-bottom: 100px
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(810px, 1fr))
  grid-template-rows:100px 450px 450px
  &__title
    display: flex
    justify-content: center
    width: 1920px
    height 130px
    margin: 0 auto
    background-color: gris-claro
    box-shadow: 0 0 15px 0 black
    h2
      font-size: 40px
      font-weight: 500
      font-family: Fuente2
      letter-spacing: 35px
      text-transform: uppercase
      color: color-claro
      text-shadow: 5px 5px 15px black
  &__brand--ducky
    grid-column: 1 / 2
    grid-row: 1 / 2
    display: flex
    justify-content: center
    height:100px
    width: 820px
    margin: 0 auto
    color: amarillo
    h2
      font-size: 30px
      font-weight: 500
      font-family: Fuente1
      letter-spacing: 35px
      text-transform: uppercase
      color: amarillo
      text-shadow: 5px 5px 15px black
  &__brand--hk
    grid-column: 2 / 3
    grid-row: 1 / 2
    display: flex
    justify-content: center
    height: 100px
    width: 820px
    margin: 0 auto
    color: amarillo
    h2
      font-size: 30px
      font-weight: 500
      font-family: Fuente1
      letter-spacing: 35px
      text-transform: uppercase
      color: amarillo
      text-shadow: 5px 5px 15px black
  .caja--productos
    align-self: center
    justify-self: center
    max-height: 410px
    max-width: 810px
    height: 410px
    width: 810px
    border-radius: 20px
    position: relative
    overflow: hidden
    text-decoration: none
    box-shadow: 0px 0px 10px 10px amarillo
    img 
      display: block
      width 100%
      height: 100%
      position: absolute
      object-fit: cover
      border: 5px solid gris-claro
      border-radius: 20px
    &__contenido
      padding: 20px
      position: absolute
      margin: 0 auto
      text-align: center
      color: color-claro
      h3
        font-size: 40px
        text-shadow: 0px 0px 10px black
    &:hover
      img
        opacity: 0.5
  .caja-ducky1
    grid-column: 1 / 2
    grid-row: 2 / 3
    background: gris-fondo
  .caja-ducky2
    grid-column: 1 / 2
    grid-row: 3 / 4
  .caja-hk1
    grid-column: 2 / 3
    grid-row: 2 / 3
    h3
      color: black
      text-shadow: 0px 0px 10px color-claro
  .caja-hk2
    grid-column: 2 / 3
    grid-row: 3 / 4
    h3
      color: black
      text-shadow: 0px 0px 10px color-claro